<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="14dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewShops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgShops"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtShopsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingHorizontal="8dp"
        android:paddingTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardViewShops"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12dp"/>
    <TextView
        android:id="@+id/txtShopsBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingHorizontal="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtShopsTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>